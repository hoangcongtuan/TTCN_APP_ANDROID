<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_num_ques"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="7dp"
            android:background="@drawable/sl_item_ans"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_num_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1"
                android:textColor="@color/sl_text_tab"
                android:textSize="18sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_ans"
            android:layout_width="25dp"
            android:visibility="gone"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:background="@drawable/ic_done" />
        <ImageView
            android:id="@+id/img_ans_warning"
            android:layout_width="25dp"
            android:visibility="gone"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:background="@drawable/ic_warning" />
    </FrameLayout>
</LinearLayout>